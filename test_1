	opc(razonamiento,si),
	opc(vocabulario,si),
	opc(domhabla,si),
	opc(espacial,si),
	opc(trabajo_equipo,si),
	opc(idioma,si),
	opc(informatica,si),
	opc(potempresarial,si),
	asserta(res(medicina,si)).

derecho:-
	opc(atencion,si),
	opc(hab_numerica,si),
	opc(razonamiento,si),
	opc(vocabulario,si),
	opc(domhabla,si),
	opc(espacial,si),
	opc(trabajo_equipo,si),
	opc(idioma,si),
	opc(informatica,si),
	opc(potempresarial,si),
    opc(commprension,si),
	asserta(res(derecho,si)).

administracion:-
	opc(atencion,no),
	opc(hab_numerica,si),
	opc(razonamiento,no),
	opc(vocabulario,no),
	opc(domhabla,si),
